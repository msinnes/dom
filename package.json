{
  "name": "dom",
  "version": "0.0.0",
  "description": "A dom library with associated jsx babel plugin",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:msinnes/dom.git"
  },
  "scripts": {
    "build": "lerna run build",
    "build-dev": "lerna run build-dev  && yarn copy-built-packages",
    "build-e2e": "yarn build-packages && yarn clean-bootstrap && yarn build-packages",
    "build-packages": "lerna run build",
    "clean": "yarn clean:tgz && yarn clean:logs && lerna run clean && lerna clean --yes",
    "clean:logs": "rimraf *.log && rimraf ./@packages/**/*.log && rimraf ./@internal/**/*.log",
    "clean:tgz": "rimraf ./@packages/*/*.tgz && rimraf *.tgz",
    "clean-bootstrap": "yarn clean && lerna bootstrap && yarn build",
    "copy-built-packages": "node ./scripts/copy-built-packages.js",
    "coverage": "yarn test --coverage",
    "create-package": "lerna create",
    "dev-server": "node ./scripts/start-test-apps/index.js",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "publish-packages": "yarn clean-bootstrap && yarn build-packages && lerna version && lerna publish from-package",
    "test": "jest",
    "test-ci": "cypress run --spec \"**/!(all).cy.js\"",
    "test-e2e": "cypress run --browser chrome --spec \"**/!(all).cy.js\"",
    "update-libs": "yarn cache clean && yarn clean-bootstrap",
    "watch": "jest --watchAll"
  },
  "keywords": [
    "dom", "renderer"
  ],
  "author": "Michael Sinnes",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-syntax-jsx": "^7.18.6",
    "@babel/preset-env": "^7.19.3",
    "@types/jest": "^29.2.4",
    "babel-jest": "^29.1.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-module-resolver": "^5.0.0",
    "cp-file": "^9.0.0",
    "css-loader": "^6.7.1",
    "cypress": "^10.9.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.1.1",
    "jest-environment-jsdom": "^29.1.1",
    "lerna": "^5.5.4",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-dev-server": "^4.11.1"
  }
}
